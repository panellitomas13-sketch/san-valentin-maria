  <script>
    const pantalla = document.getElementById("pantalla");

    // Corazones flotando
    setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.innerHTML = "游눘";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.fontSize = Math.random() * 20 + 15 + "px";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 6000);
    }, 300);

    document.getElementById("btnAvanzar").onclick = () => {
      pantalla.innerHTML = `
        <h1>쯈uieres ser mi cita de San Valent칤n? 游눚</h1>
        <button id="btnSi">S칤</button>
        <button id="btnNo">No</button>
      `;

      let tama침oSi = 16;
      let moverNo = 0;

      const btnSi = document.getElementById("btnSi");
      const btnNo = document.getElementById("btnNo");

      btnNo.addEventListener("mouseover", () => {
        tama침oSi += 10;
        moverNo += 30;
        btnSi.style.fontSize = tama침oSi + "px";
        btnSi.style.padding = (12 + tama침oSi / 5) + "px";
        btnNo.style.transform = `translateX(${moverNo}px)`;
      });

      btnSi.onclick = () => {
        explosionCorazones();
        document.body.classList.add("fondo-nosotros");

        setTimeout(() => {
          pantalla.innerHTML = `
            <h1>游눏 Invitaci칩n de San Valent칤n 游눏</h1>
            <p>
              Debido a que no est치s el 14 de febrero,<br><br>
              nuestra cita se pasar치 al<br>
              <strong>jueves 19 de febrero a las 22 hs</strong>.<br><br>
              Te quiero, mi koalita 游냗游눘
            </p>
          `;
        }, 1200);
      };
    };

    function explosionCorazones() {
      const centerX = window.innerWidth / 2;
      const centerY = window.innerHeight / 2;

      for (let i = 0; i < 40; i++) {
        const heart = document.createElement("div");
        heart.className = "explosion-heart";
        heart.innerHTML = "游눘";
        heart.style.left = centerX + "px";
        heart.style.top = centerY + "px";

        const x = (Math.random() - 0.5) * 400 + "px";
        const y = (Math.random() - 0.5) * 400 + "px";
        heart.style.setProperty("--x", x);
        heart.style.setProperty("--y", y);

        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 1500);
      }
    }
  </script>

